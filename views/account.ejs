<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="icon" href="https://index-eosin.vercel.app/Imarat%20Group.svg" type="image/icon type" />
    <title>Камеры</title>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-md">
        <a class="navbar-brand" href="#">
          <img src="https://index-eosin.vercel.app/Imarat%20Group.svg" alt="Logo" width="100" height="50" class="d-inline-block align-text-top">
        </a>
        <form action="/logout" method="post" class="d-flex">
          <button type="submit" class="btn btn-danger" style="font-weight: bold">Выйти</button>
        </form>
      </div>
    </nav>
    <div class="container-md mt-4">
      <h1>Добро пожаловать в ваш аккаунт <%= user.firstName %> <%= user.lastName %>!</h1>
      <div class="row">
        <div class="col-md-6">
          <p><strong>Номер квартиры:</strong> <%= user.house %></p>
          <p><strong>О квартире:</strong> <%= user.houseDesc %></p>
        </div>
        <div class="col-md-6"><br>
          <p><strong>Имя пользователя:</strong> <%= user.username %></p>
          <p><strong>Пароль:</strong> <%= user.password %></p>
        </div>
        <div class="row">
          <div class="col-sm-6">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Камера №:"1"</h5>
                <p class="card-text">
                  <video width="100%" height="100%" controls disablePictureInPicture controlslist="nodownload noplaybackrate">
                    <source src="<%= user.cameraOne %>" type="video/mp4">
                    <source src="<%= user.cameraOne %>" type="video/ogg">
                  </video>
                </p>
              </div>
            </div>
          </div>
          <div class="col-sm-6">
            <% if (user.cameraTwo) { %>
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title">Камера №:"2"</h5>
                  <p class="card-text">
                    <video width="100%" height="100%" controls disablePictureInPicture controlslist="nodownload noplaybackrate">
                      <source src="<%= user.cameraTwo %>" type="video/mp4">
                      <source src="<%= user.cameraTwo %>" type="video/ogg">
                    </video>
                  </p>
                </div>
              </div>
              <br>
            <% } %>
          </div>          
          <div class="col-sm-6">
            <% if (user.cameraThree) { %>
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title">Камера №:"3"</h5>
                  <p class="card-text">
                    <video width="100%" height="100%" controls disablePictureInPicture controlslist="nodownload noplaybackrate">
                      <source src="<%= user.cameraThree %>" type="video/mp4">
                      <source src="<%= user.cameraThree %>" type="video/ogg">
                    </video>
                  </p>
                </div>
              </div>
            <% } %>
          </div>
          <div class="col-sm-6">
            <% if (user.cameraFour) { %>
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title">Камера №:"4"</h5>
                  <p class="card-text">
                    <video width="100%" height="100%" controls disablePictureInPicture controlslist="nodownload noplaybackrate">
                      <source src="<%= user.cameraFour %>" type="video/mp4">
                      <source src="<%= user.cameraFour %>" type="video/ogg">
                    </video>
                  </p>
                </div>
              </div>
            <% } %>
            <br>
          </div>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
    <script>
      let lastActivityTime = Date.now();
      function resetActivityTime() {
        lastActivityTime = Date.now();
      }
      function checkActivity() {
        const currentTime = Date.now();
        const idleTime = currentTime - lastActivityTime;
        const idleTimeout = 30 * 60 * 1000;
        if (idleTime >= idleTimeout) {
          window.location.href = "/logout";
        }
      }
      document.addEventListener("mousemove", resetActivityTime);
      document.addEventListener("keypress", resetActivityTime);
      setInterval(checkActivity, 60 * 1000);
    </script>
  </body>
</html>
